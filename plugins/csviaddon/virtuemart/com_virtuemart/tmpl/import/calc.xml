<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="jform">
		<fieldset name="general">
			<field name="language"
				type="CsviVirtuemartLanguage"
				class="advancedSelect"
				size="1" />

			<field name="category_separator"
				type="text"
				size="2"
				class="input-mini"
				default="/" />

			<field name="field_selectors"
				   type="list"
				   default=""
				   class="advancedSelect"
				   multiple="true"
				   advancedUser="1"
				   >
				<option value="">JNONE</option>
				<option value="category">COM_CSVI_CALC_SELECTOR_CATEGORY</option>
				<option value="shoppergroup">COM_CSVI_CALC_SELECTOR_SHOPPERGROUP</option>
				<option value="country">COM_CSVI_CALC_SELECTOR_COUNTRY</option>
				<option value="state">COM_CSVI_CALC_SELECTOR_STATE</option>
				<option value="manufacturer">COM_CSVI_CALC_SELECTOR_MANUFACTURER</option>
			</field>
		</fieldset>
	</fields>
</form>
