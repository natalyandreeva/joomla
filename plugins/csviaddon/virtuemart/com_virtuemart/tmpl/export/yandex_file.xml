<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="jform">
		<fieldset name="file">
			<field name="export_filename"
				   type="text"
				   size="40"/>

			<field name="export_file"
				   type="hidden"
				   default="xml"
				   emptylabel="true"
				   emptydescription="true">
			</field>

			<field name="export_site"
				   type="hidden"
				   default="yandex"
				   emptylabel="true"
				   emptydescription="true">
			</field>

			<field name="publish_state"
				   type="list"
				   size="1"
				   class="advancedSelect"
				   default="">
				<option value="">COM_CSVI_ALL_STATES</option>
				<option value="1">COM_CSVI_PUBLISHED</option>
				<option value="0">COM_CSVI_UNPUBLISHED</option>
			</field>

			<field name="recordstart"
				   type="text"
				   size="5"
				   class="input-small"/>

			<field name="recordend"
				   type="text"
				   size="5"
				   class="input-small"/>

			<field name="export_date_format"
				   type="text"
				   size="15"
				   default="d/m/Y H:i:s"
				   class="input-small"/>

			<field name="export_price_format_decimal"
				   type="text"
				   size="3"
				   maxlength="1"
				   default="2"
				   class="input-small"/>

			<field name="export_price_format_decsep"
				   type="text"
				   size="3"
				   maxlength="1"
				   class="input-small"/>

			<field name="export_price_format_thousep"
				   type="text"
				   size="3"
				   maxlength="1"
				   class="input-small"/>

			<field name="add_currency_to_price"
				   type="list"
				   size="1"
				   class="input-small advancedSelect"
				   default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
		</fieldset>
	</fields>
</form>
