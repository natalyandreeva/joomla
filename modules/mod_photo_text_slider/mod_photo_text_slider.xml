	<version>1.0</version>
	<description>Photo text slider is an another JQuery based slideshow module for joomla.</description>
	<files>
		<filename module="mod_photo_text_slider">mod_photo_text_slider.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
		<filename>mod_photo_text_slider.xml</filename>
		<folder>tmpl</folder>
