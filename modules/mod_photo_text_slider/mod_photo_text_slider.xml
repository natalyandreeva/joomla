				<field name="pts_desc4" type="textarea" cols="42" rows="6" default="" label="Description" description="" />

				<field name="@spacer4" type="spacer" default="" label="" description="" />
				<field name="pts_title5" type="text" size="60" default="" label="Title" description="Enter the slider title." />
				<field name="pts_link5" type="text" size="60" default="" label="Link" description="Enter the link to redirect." />
