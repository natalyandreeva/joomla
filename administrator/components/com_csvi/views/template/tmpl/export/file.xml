<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="jform">
		<fieldset name="file">
			<field name="export_filename"
				type="text"
				class="input-xlarge" />

			<field name="export_file"
				type="list"
				size="1"
				default="csv"
				class="input-small advancedSelect"
				onchange="Csvi.loadExportSites(jQuery(this).val(), '');">
				<option value="csv">CSV</option>
				<option value="xml">XML</option>
				<option value="html">HTML</option>
			</field>

			<field name="export_site"
				type="list"
				size="1"
				class="input-medium advancedSelect"
				default="">
			</field>

			<field name="field_delimiter"
				type="text"
				size="2"
				maxlength="1"
				class="input-mini"
				default="," />

			<field name="text_enclosure"
				type="text"
				size="2"
				class="input-mini"
				maxlength="1"
				default=""/>

			<field name="include_column_headers"
				type="list"
				size="1"
				class="input-small advancedSelect"
				default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field name="signature"
				type="list"
				size="1"
				class="input-small advancedSelect"
				default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field name="recordstart"
				type="text"
				class="input-small" />

			<field name="recordend"
				type="text"
				class="input-small" />
		</fieldset>
	</fields>
</form>
