<?xml version="1.0" encoding="utf-8"?>
<form cron="false">
	<fieldset name="rule">
		<field name="csvi_rule_id"
			type="hidden" />

		<field name="name"
			type="text"
			label="COM_CSVI_RULE_NAME_LABEL"
			description="COM_CSVI_RULE_NAME_DESC"
			required="true"
			class="input-xlarge" />

		<field name="action"
			type="list"
			label="COM_CSVI_RULE_ACTION_LABEL"
			description="COM_CSVI_RULE_ACTION_DESC"
			required="true"
			size="1"
			class="advancedSelect"
			default="import">
			<option value="import">COM_CSVI_IMPORT</option>
			<option value="export">COM_CSVI_EXPORT</option>
		</field>

		<field name="plugin"
			type="csvirules"
			label="COM_CSVI_RULE_PLUGIN_LABEL"
			description="COM_CSVI_RULE_PLUGIN_DESC"
			class="advancedSelect"
			required="true" />

		<field name="ordering"
			type="text"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			class="input-mini"
			size="6"
			default="0" />
	</fieldset>
</form>
