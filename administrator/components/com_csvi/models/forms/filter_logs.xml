<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
				name="search"
				type="text"
				hint="JSEARCH_FILTER"
				/>

		<field
				name="actiontypes"
				type="csviactiontypes"
				label="COM_CSVI_SELECT_ACTIONTYPE"
				description="COM_CSVI_SELECT_ACTIONTYPE_DESC"
				class="advancedSelect"
				onchange="this.form.submit();"
				>
			<option value="">COM_CSVI_LOG_DONT_USE</option>
		</field>
	</fields>

	<fields name="list">
		<field
				name="limit"
				type="limitbox"
				class="input-mini advancedSelect"
				default="25"
				onchange="this.form.submit();"
		/>

		<field
				name="fullordering"
				type="hidden"
		/>
	</fields>
</form>
