<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                hint="JSEARCH_FILTER"
        />

        <field name="csvi_template_id"
               type="csvi.groupedtemplates"
			   id="csvi_template_id"
               size="1"
               default=""
               class="input-xlarge advancedSelect"
               onchange="this.form.submit();">
        </field>

        <field name="enabled"
               type="list"
               size="1"
               class="advancedSelect"
               default=""
               onchange="this.form.submit();">
            <option value="">COM_CSVI_FILTER_PUBLISHED</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

    </fields>

    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="input-mini advancedSelect"
                default="25"
                onchange="this.form.submit();"
        />

        <field
                name="fullordering"
                type="hidden"
        />
    </fields>
</form>
