<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields name="General">
		<field name="profile_default" type="profile" default="" label="Профиль по умолчанию" description="Выберите профиль, который должен быть загружен по умолчанию." />
		<field name="profile_dynamic" type="radio" default="1" label="Динамические профили" description="Разрешить загрузку профилей через URL.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		<field name="compression" type="list" default="0" label="Сжатие" description="Минимизировать и объединить CSS и JavaScript в один файл. Использовать GZip сжатие данных и идентификаторы URI, чтобы уменьшить запросы.">
			<option value="0">None</option>
			<option value="1">Combination + Minify</option>
			<option value="2">Combination + Minify + Data URIs</option>
			<option value="3">Combination + Minify + Data URIs + Gzip</option>
		</field>
		<field name="outdated_browser" type="radio" default="1" label="Страница обновления" description="Перенаправление устаревших браузеров для обновления страницы.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		<field name="twitter" type="radio" default="0" label="Кнопка Twitter" description="Показать Tweet кнопку в ваших статьях.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		<field name="plusone" type="radio" default="0" label="Кнопка Google+" description="Показать Google+ кнопку в ваших статьях.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		<field name="facebook" type="radio" default="0" label="Кнопка Facebook" description="Показать Facebook кнопку мне нравится в ваших статьях.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
	  	<field name="tracking_code" type="textarea" rows="8" cols="30" label="Код отслеживания" description="Вставьте код отслеживания Google Analytics." />
		<field name="verify" type="verify" label="Проверка файлов" description="Найти и показать все модифицированные файлы." />
		<field name="check" type="check" label="Проверка системы" description="Обноружение конфликтов." />
	</fields>
	<fields name="Profiles">
		<field name="Стиль" type="separator" />
		<field name="style" type="styles" default="" label="Стиль" description="Выберите стиль." />
		<field name="color1" type="list" default="default" label="Основной цвет" description="Выбирите основной цвет.">
			<option value="">Blue</option>
			<option value="orange">Orange</option>
			<option value="green">Green</option>
			<option value="navy">Navy</option>
			<option value="red">Red</option>
			<option value="pink">Pink</option>
			<option value="salmon">Salmon</option>
			<option value="turquoise">Turquoise</option>
			<option value="rose">Rose</option>
		</field>
		<field name="color2" type="list" default="default" label="Дополнительный цвет" description="Выбирите дополнительный цвет.">
			<option value="">Orange</option>
			<option value="blue">Blue</option>
			<option value="green">Green</option>
			<option value="navy">Navy</option>
			<option value="red">Red</option>
			<option value="pink">Pink</option>
			<option value="salmon">Salmon</option>
			<option value="turquoise">Turquoise</option>
			<option value="rose">Rose</option>
		</field>
		<field name="font1" type="list" default="default" label="Текст сайта" description="Выбирите текст сайта.">
			<option value="arial">Arial</option>
			<option value="lucida">Lucida</option>
			<option value="georgia">Georgia</option>
			<option value="timesnewroman">Times New Roman</option>
			<option value="trebuchet">Trebuchet</option>
			<option value="droidsans">Droid Sans</option>
			<option value="opensans">Open Sans</option>
			<option value="yanonekaffeesatz">Yanone Kaffeesatz</option>
			<option value="mavenpro">Maven Pro</option>
			<option value="kreon">Kreon</option>
		</field>
		<field name="font2" type="list" default="default" label="Текст шапки" description="Выбирите текст сайта.">
			<option value="arial">Arial</option>
			<option value="lucida">Lucida</option>
			<option value="georgia">Georgia</option>
			<option value="timesnewroman">Times New Roman</option>
			<option value="trebuchet">Trebuchet</option>
			<option value="droidsans">Droid Sans</option>
			<option value="opensans">Open Sans</option>
			<option value="yanonekaffeesatz">Yanone Kaffeesatz</option>
			<option value="mavenpro">Maven Pro</option>
			<option value="kreon">Kreon</option>
		</field>
		<field name="font3" type="list" default="default" label="Текст меню" description="Выбирите текст меню.">
			<option value="arial">Arial</option>
			<option value="lucida">Lucida</option>
			<option value="georgia">Georgia</option>
			<option value="timesnewroman">Times New Roman</option>
			<option value="trebuchet">Trebuchet</option>
			<option value="droidsans">Droid Sans</option>
			<option value="opensans">Open Sans</option>
			<option value="yanonekaffeesatz">Yanone Kaffeesatz</option>
			<option value="mavenpro">Maven Pro</option>
			<option value="kreon">Kreon</option>
		</field>
		<field name="Контент" type="separator" />
		<field name="date" type="radio" default="1" label="Дата" description="Отображать дату.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		<field name="totop_scroller" type="radio" default="1" label="Кнопка вверх" description="Отображать кнопку вверх.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		<field name="warp_branding" type="radio" default="1" label="Копирайт" description="Отображать копирайт.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		<field name="system_output" type="radio" default="1" label="Вывод системы" description="Отображать системный модуль.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		<field name="Макет" type="separator" />
		<field name="responsive" type="radio" default="1" label="Responsive Layout" description="Enable responsive layout.">
			<option value="0">Нет</option>
			<option value="1">Да</option>
		</field>
		<field name="template_width" type="text" size="10" default="980" label="Ширина шаблона" description="Установите ширину шаблона." class="short" />
		<field name="sidebar-a_width" type="text" size="10" default="25" label="Ширина Sidebar A" description="Установите ширину Sidebar A в процентах." class="short" />
		<field name="sidebar-b_width" type="text" size="10" default="25" label="Ширина Sidebar B" description="Установите ширину Sidebar B в процентах." class="short" />
		<field name="sidebar-a" type="list" default="right" label="Позиция Sidebar A" description="Установите выравнивание Sidebar A.">
			<option value="right">Право</option>
			<option value="left">Лево</option>
		</field>
		<field name="sidebar-b" type="list" default="right" label="Позиция Sidebar B" description="Установите выравнивание Sidebar B.">
			<option value="right">Право</option>
			<option value="left">Лево</option>
		</field>
		<field name="top-a" type="layout" default="equal" label="Top A Layout" description="Select a grid layout for this module position." />
		<field name="top-b" type="layout" default="equal" label="Top B Layout" description="Select a grid layout for this module position." />
		<field name="innertop" type="layout" default="equal" label="Inner Top Layout" description="Select a grid layout for this module position." />
		<field name="innerbottom" type="layout" default="equal" label="Inner Bottom Layout" description="Select a grid layout for this module position." />
		<field name="bottom-a" type="layout" default="equal" label="Bottom A Layout" description="Select a grid layout for this module position." />
		<field name="bottom-b" type="layout" default="equal" label="Bottom B Layout" description="Select a grid layout for this module position." />
		<field name="menu_width" type="text" size="10" default="250" label="Drop Down Column Width" description="Set the column width of the drop down menu in pixel." class="short" />
	</fields>
</config>
